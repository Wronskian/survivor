<h2>New Player</h2>

<%= form_for @player do |f| %>
  <p><%= f.label :name %><br />
  <%= f.text_field :name %></p>
  
  <p><%= f.label :description %><br />
  <%= f.text_area :description %></p>
  
  <p><%= f.label :user_id, "User ID" %><br />
  <%= f.text_field :user_id, { :size => "2" } %></p>
  
  <%= f.submit %>
<% end %>
  
  
