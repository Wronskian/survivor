<h2><b>The Survivor Cast</b></h2>

<% @Players.each do |player| %>
	<div class = "span-3 player_box">
		<b><%= player.name %></b> <br />
		<%= player.description %>
			<% if player.user_id.nil? %>
				<br /><br />
			<% else %>
				<br />
				<div class = "small">Picked by:
				<% @user = User.find(player.user_id) %>
				<%= @user.username %></div>
			<% end %>
		</div>
<% end %>